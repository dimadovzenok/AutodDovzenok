<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutodDovzenok.View.dodge">
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Label VerticalOptions="Center" HorizontalOptions="Center" TextColor="Black" FontSize="Large" Text="Модели машин марки Dodge" />
            <Image x:Name="PhotosDodge" Source="dodgeRAM.jpg" HeightRequest="250"/>
            <Picker x:Name="modelDodge" SelectedIndexChanged="modelDodge_SelectedIndexChanged">
                <Picker.Items>
                    <x:String>Dodge Demon</x:String>
                    <x:String>Dodge RAM</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>