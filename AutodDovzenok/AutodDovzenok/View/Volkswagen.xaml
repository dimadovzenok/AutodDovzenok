<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutodDovzenok.View.Volkswagen">
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Label VerticalOptions="Center" HorizontalOptions="Center" TextColor="Black" FontSize="Large" Text="Модели машин марки Volkswagen" />
            <Image x:Name="PhotosVolkswagen" Source="passat.jpg" HeightRequest="250"/>
            <Picker x:Name="modelVolkswagen" SelectedIndexChanged="modelVolkswagen_SelectedIndexChanged">
                <Picker.Items>
                    <x:String>Passat</x:String>
                    <x:String>T-Roc</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>