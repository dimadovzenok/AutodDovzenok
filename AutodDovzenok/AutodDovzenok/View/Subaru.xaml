<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutodDovzenok.View.Subaru">
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Label VerticalOptions="Center" HorizontalOptions="Center" TextColor="Black" FontSize="Large" Text="Модели машин марки Subaru" />
            <Image x:Name="PhotosSubaru" Source="forester.jpg" HeightRequest="250"/>
            <Picker x:Name="modelSubaru" SelectedIndexChanged="modelSubaru_SelectedIndexChanged">
                <Picker.Items>
                    <x:String>Forester</x:String>
                    <x:String>Outback</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>