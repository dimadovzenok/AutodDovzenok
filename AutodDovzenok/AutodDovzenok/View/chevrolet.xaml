<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutodDovzenok.View.chevrolet" Title="Chevrolet">
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Label VerticalOptions="Center" HorizontalOptions="Center" TextColor="Black" FontSize="Large" Text="Модели машин марки Chevrolet" />
            <Image x:Name="PhotosChevrolet" Source="chevroletCamaro.jpg" HeightRequest="250"/>
            <Picker x:Name="modelChevrolet" SelectedIndexChanged="modelChevrolet_SelectedIndexChanged">
                <Picker.Items>
                    <x:String>Chevrolet Camaro</x:String>
                    <x:String>Chevrolet Corvette</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>