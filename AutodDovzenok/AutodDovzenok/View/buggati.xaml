<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutodDovzenok.View.buggati" Title="Bugatti">
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Label VerticalOptions="Center" HorizontalOptions="Center" TextColor="Black" FontSize="Large" Text="Модели машин марки Bugatti" />
            <Image x:Name="PhotosBugatti" Source="bugattioneoff.jpg" HeightRequest="250"/>
            <Picker x:Name="modelBugatti" SelectedIndexChanged="modelBugatti_SelectedIndexChanged">
                <Picker.Items>
                    <x:String>Bugatti One Off</x:String>
                    <x:String>Bugatti Bolide</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>